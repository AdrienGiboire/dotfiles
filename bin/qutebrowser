#!/usr/bin/env bash

path_to_qute="$HOME/code/qutebrowser"
cmd=$1

if [[ $cmd == "update" ]]
then
  cd $path_to_qute
  git pullr
  tox -r -e mkvenv-pypi
  cd -

elif [[ $cmd == "install" ]]
then
  sudo apt install libglib2.0-0 libgl1 libfontconfig1 libx11-xcb1 libxi6 libxrender1 libdbus-1-3
  git clone https://github.com/qutebrowser/qutebrowser.git $path_to_qute
  cd $path_to_qute
  tox -e mkvenv-pypi
  cd -

else
  $path_to_qute/.venv/bin/python3 -m qutebrowser "$@" &
fi
