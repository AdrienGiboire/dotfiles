#!/bin/sh

set -e

declare -a list_of_files=(
  ".dotfiles"
  ".gitconfig"
  ".githelpers"
  ".tmux.conf"
  ".vim"
  ".vimrc"
  ".zlogin"
  ".zlogout"
  ".zprezto"
  ".zpreztorc"
  ".zprofile"
  ".zshenv"
  ".zshrc"
)

if [ "$#" -gt 0 ] && [ "$1" = "-v" ]; then
  verbose=true
else
  verbose=false
fi

echo "==> Deleting files..."

for file in "${list_of_files[@]}"; do
  if $verbose; then
    echo "====> Deleting $file..."
  fi

  rm -fr "$file"
done

echo "==> Done Uninstalling..."
