[core]
	excludesfile = ~/.gitignore
  editor = nvim
  ignorecase = false
  # protect your project from Windows line endings creeping in
  autocrlf = input
[user]
  name = Adrien
  email = github@adrien.sent.com
	signingkey = 6AEE3B0147923AF2
[color]
  ui = auto
[alias]
  st = status
  ci = commit --verbose
  co = checkout
  cpk = cherry-pick
  di = diff --color
  dc = diff --color --cached
  amend = commit --amend
  aa = add --all
  pullr = "!. ~/.githelpers && git_pullr"
  fa = fetch --all
  pom = push origin master
  pum = push upstream master
  b = !git branch -v
  rb = "!. ~/.githelpers && git_rebase"
  rc = rebase --continue
  ra = rebase --abort
  ri = rebase --interactive

  r = !GIT_NO_PAGER=1 git l -10
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

  pr = "!. ~/.githelpers && pull_request"
  d = difftool
  commend = commit --amend --no-edit
  staash = stash --include-untracked
  ctags = !.git/hooks/ctags

  tags = "for-each-ref --sort=taggerdate --format='%(color:green)%(subject)%(color:reset), tagged: %(color:yellow)%(refname:short)%(color:reset)\n%(taggerdate)\n%(taggername) %(taggeremail)\n\n%(contents:body)\n' refs/tags"

[merge]
  tool = nvimdiff
[diff]
  tool = nvimdiff
[pull]
  default = current
[push]
  default = current
[difftool]
  prompt = false
[github]
  token = 318ac7f82fedc1e5c2d0d3e75d7d34b2e7e8ff91
  user = AdrienGiboire
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[init]
  templatedir = ~/.git_template
